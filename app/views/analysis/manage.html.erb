<%= form_for @analysis, {:url => analysis_learn_path, :remote => true, :html => {:class => 'form-inline'}} do |f| %>
  <% {:num_data => '学習データ数', :interval => '予測先(期間)'}.each do |param, text| %>
    <span class='input-custom'>
      <%= f.label param, "#{text}：" %>
      <%= f.text_field param, {:class => 'form-control', :name => param, :required => true} %>
    </span>
  <% end %>
  <span class='pull-right'>
    <%= f.submit '実行', :class => 'btn btn-primary btn-sm' %>
    <%= f.submit 'リセット', :type => 'reset', :class => 'btn btn-default btn-sm' %>
  </span>
<% end %>
<hr>
