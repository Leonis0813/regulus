<% @articles.each do |article| %>
<div style="width:610px; height:140px; margin:3px; padding:10px; box-shadow:5px 5px 5px rgba(0,0,0,0.4); background-color:#ffcc77;">
<font size="2">
<b>Title:</b> <%= escape_javascript(article.title) %><br/>
<b>Summary:</b> <%= escape_javascript(article.summary) %><br/>
<b>URL:</b> <%= raw("<a href=\"#{article.url}\">#{article.url}</a>") %><br/>
</font>
<br/>
</div>
<% end %>
