<% @tweets.each do |tw| %>
<div style="width:630px; height:110px; margin:3px; box-shadow:5px 5px 5px rgba(0,0,0,0.4); background-color:#cceeff;">
<div style="float:left; width:55px; height:55px; padding:7px;">
<img width="48" height="48" src=<%= tw.profile_image_url %> >
</div>
<div style="float:left; width:540px; height:48px; padding:5px 0px 0px 10px">
<font size="2">
<%= escape_javascript(tw.user_name) %> | 
<%= raw(tw.full_text.gsub('\n', '<br/>').gsub(/(http[s]?:\/\/[^\s]+)/){"<a href=#{$1}>#{$1}</a>"}) %> | 
<%= tw.tweeted_at %>
</font>
</div>
<br/>
</div>
<% end %>
